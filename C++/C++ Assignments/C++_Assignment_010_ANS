#include <iostream>
using namespace std;

int main() {

  char letter;

  cout << "Enter a letter: ";
  cin >> letter;

  if (letter == 'a' || letter == 'A' || letter == 'e' || letter == 'E' || letter == 'I' || letter == 'i' || letter == 'o' || letter == 'O' || letter == 'U') {

    cout << letter << " is a vowel!";
  }

  return 0;
}
