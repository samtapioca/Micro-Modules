#include <iostream>
using namespace std;

int main() {

 int num, max=0, min=0, x = 0; 


 while (x < 3) {

  cout <<"Enter a number: ";
  cin >> num;

  if (x == 0) {
   max = num;
   min = num;
  }
  if (num > max) {
   max = num;
  }
  if (num < min) {
   min = num;
  }
  x++;
 }


 cout <<"The highest number is " << max << endl;
 cout <<"The lowest number is " << min << endl; 
 return 0;
}
