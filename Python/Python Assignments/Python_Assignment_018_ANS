string = input("Enter a string: ")

def upper():
  upper = 0
  for i in string:
    if(i.isupper() == True):
       upper = upper + 1
  print("Uppercase Letters:", upper)


def lower():
  lower = 0
  for i in string:
    if(i.islower() == True):
      lower = lower + 1
  print("Lowercase Letters:", lower)


upper()
lower()
