#include <stdio.h> 

int main()
{
    int array[100];
    int n, i;

    printf("Enter number of integers: ");
    scanf("%d", &n);

    /* Step 1: read the n integers using a for loop */
    printf("Enter numbers: ");
    for(i=0; i<n; i=i+1)
    {
        scanf("%d", &array[i]);
    }

  /* Step 2: print the array by reversing the loop */
    for(i = n-1; i>=0; i--)
    {
        printf("%d\t", array[i]);
    }

    return 0;
}
