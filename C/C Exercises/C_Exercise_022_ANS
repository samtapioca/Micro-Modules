#include <stdio.h>
int main()
{
  int arr[20],num,i;
  int pos = 0;
  int neg = 0;
  int odd = 0;
  int even = 0;
  int zero = 0;
  for(i=0;i<10;i++)
  {
    printf("Enter a number:\n");
    scanf("%d",&arr[i]);
    if(arr[i]>0){
      pos++;
    }
    else if(arr[i]<0){
      neg++;
    }
    else{
      zero++;
    }
    if(arr[i]%2==0){
      even++;
    }
    else{
      odd++;
    }
  }
  printf("Positive Numbers : %d\nNegative Numbers: %d\nZero Numbers: %d\n Odd Numbers: %d\n Even Numbers: %d\n",pos,neg,zero,odd,even);
  return 0;
}
									
