import java.util.Scanner;
class Main {
 
    public static void main(String[] args) {
        Scanner n = new Scanner(System.in);
        int num;
 
        System.out.print("Enter a number: ");
        num = n.nextInt();
 
        while (num != 0) {
 
            System.out.println("Hello");
            System.out.print("Enter a number: ");
            num = n.nextInt();
        }
        System.out.println("Bye");
    }
}
